<?xml version="1.0" encoding="UTF-8"?>
<!-- As we have added dynamic logging configuration, keeping this file minimal
     Its primary role will be to provide a default configuration that the application can fall back on if needed
-->
<Configuration status="WARN">
    <Appenders>
        <!-- Console appender for default logging -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Root logger to catch any logs that don't match other loggers -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>